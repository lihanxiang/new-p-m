<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.CustomProductMapper">
    <sql id="find_product_where">
            <if test="customProduct != null and customProduct != ' '">
                <if test="barcode != null">
                    barcode = #{barcode,jdbcType=CHAR}
                </if>
                <if test="name != null and name != ' '">
                    AND name = #{name,jdbcType=VARCHAR}
                </if>
                <if test="units != null and units != ' '">
                    AND units = #{units,jdbcType=VARCHAR}
                </if>
                <if test="purchaseprice != null and purchaseprice != ' '">
                    AND purchaseprice = #{purchaseprice,jdbcType=VARCHAR}
                </if>
                <if test="saleprice != null and saleprice != ' '">
                    AND saleprice = #{saleprice,jdbcType=VARCHAR}
                </if>
                <if test="inventory != null and inventory != ' '">
                    AND inventory = #{inventory,jdbcType=VARCHAR}
                </if>
            </if>
    </sql>

    <select id="productsList" parameterType="po.CustomProduct" resultType="po.CustomProduct">
        SELECT * FROM product
    </select>

    <select id="findProduct" parameterType="po.CustomProduct" resultType="po.CustomProduct">
        SELECT * FROM product
        <where>
            <include refid="find_product_where"/>
        </where>
    </select>
</mapper>